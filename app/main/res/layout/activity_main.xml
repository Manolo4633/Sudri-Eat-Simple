<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/fond_bleu_accueil">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/logo_avec_cerclage"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/nom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/texte_accueil1"
            android:gravity="center"
            android:textSize="60dp"
            android:layout_marginTop="25dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/texte_accueil2"
            android:gravity="center"
            android:textSize="17dp"
            android:layout_marginTop="50dp"/>

        <Button
            android:id="@+id/button_connecter"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Se connecter"
            android:textSize="14dp"
            android:layout_gravity="center"
            android:layout_marginTop="100dp" />


        <Button
            android:id="@+id/button_enregistrer"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="S'enregistrer"
            android:textSize="14dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp" />


    </LinearLayout>

</RelativeLayout>